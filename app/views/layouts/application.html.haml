%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %title Frauenlauftreff   
    = stylesheet_link_tag "application", "style", "form"
    = javascript_include_tag "application"
  %body
    .container
      .wrap
        #header
          #branding
            #site-title
              %span Frauenlauftreff
            #site-description
              %span Frauenlauftreff
          #sidebar-header.sidebar
            %a.logo.fleft{:href => "/"}
              %img{:alt => "Frauenlauftreff", :src => "/assets/team.jpg"}
          #menu-primary.menu-container
            .menu
              %ul#menu-primary-items
                %li.menu-item
                  %a(href="/") Home


                %li
                  %a{:href => "blog.html"} Blog
                %li
                  %a{:href => "contact.html"} Contact
                - if user_signed_in?
                  %li{ :class => (params[:controller] == "meeting_point" ? "active" : nil) }
                    = link_to t("meeting_point"), meeting_points_path
                  %li{ :class => (params[:controller] == "profiles" ? "active" : nil) }
                    = link_to t("profile"), profiles_path
                  %li{ :class => (params[:controller] == "conversations" ? "active" : nil) }
                    = link_to t("conversation"), conversations_path
                  %li
                    = link_to t("logout", :default => "Logout"), destroy_user_session_path, :method => :delete
                - else
                  %li
                    = link_to t("login", :default => "Login"), new_user_session_path
        %p#notice= notice
        %p#alert= alert
        .main
          .aside
            #menu-secondary
              .wrap
                .menu
                  %ul.menu-secondary-items
                    %li
                      %a{:href => "/"} Home
                    %li
                      %a{:href => "about.html"} About
                    %li
                      %a{:href => "works.html"} Works
                    %li
                      %a{:href => "services.html"} Services
                    %li
                      %a{:href => "blog.html"} Blog
                    %li
                      %a{:href => "contact.html"} Contact
          .content-wrap

            #content
              .hentry
                = yield
        #footer
          #footer-content
          #menu-subsidiary
            .wrap
              .menu
                %ul#menu-subsidiary-items
                  %li
                    %a{:href => "#"} RSS
                  %li
                    %a{:href => "#"} Facebook
                  %li
                    %a{:href => "#"} Twitter
                  %li
                    %a{:href => "#"} Google+
                  %li
                    %a{:href => "#"} Flickr
